{
    "app-id": "com.github.marktext.marktext",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "18.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "marktext",
    "rename-appdata-file": "marktext.appdata.xml",
    "rename-desktop-file": "marktext.desktop",
    "rename-icon": "marktext",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--filesystem=home",
        "--filesystem=host",
        "--filesystem=/tmp",
        "--device=dri",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        {
            "name": "marktext",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "x86_64": {
                        "env": {
                            "FLATPAK_ARCH": "x86_64"
                        }
                    }
                }
            },
            "build-commands": [
                "chmod +x build-marktext.sh",
                "./build-marktext.sh"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/marktext/marktext/releases/download/v0.13.53/marktext-0.13.53.tar.gz",
                    "sha256": "1e3c135b30664a4575cdbee08cb60a50172843082a75ab01bf2dc0466bb70c24",
                    "dest": "marktext_binary"
                },
                {
                    "type": "git",
                    "url": "https://github.com/marktext/marktext.git",
                    "commit": "cdc9c6c8abc50a3b70de143f996e2c13b62d51c5"
                },
                {
                    "type": "file",
                    "path": "build-marktext.sh"
                }
            ]
        }
    ]
}

