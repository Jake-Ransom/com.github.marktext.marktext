{
    "app-id": "com.github.marktext.marktext",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "marktext",
    "rename-appdata-file": "marktext.appdata.xml",
    "rename-desktop-file": "marktext.desktop",
    "rename-icon": "marktext",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--filesystem=home",
        "--filesystem=host",
        "--filesystem=/tmp",
        "--device=dri",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        {
            "name": "marktext",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "x86_64": {
                        "env": {
                            "FLATPAK_ARCH": "x86_64"
                        }
                    }
                }
            },
            "build-commands": [
                "chmod +x build-marktext.sh",
                "chmod +x marktext_x86_64.AppImage",
                "./build-marktext.sh"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/marktext/marktext/releases/download/v0.12.25/marktext-0.12.25-x86_64.AppImage",
                    "sha256": "22285da237ab8bcffc60799897230bb359692e4dc4178dd9dab123b34db33046",
                    "dest-filename": "marktext_x86_64.AppImage"
                },
                {
                    "type": "git",
                    "url": "https://github.com/marktext/marktext.git",
                    "commit": "746969e7053b4c633786bdd433dcef1d523fdf26"
                },
                {
                    "type": "file",
                    "path": "build-marktext.sh"
                }
            ]
        }
    ]
}

